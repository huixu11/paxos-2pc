		setup(node, (name, cid, peers, set(nodes_list), cluster_map, initial_leader, initial_leader_proc))

	start(nodes)

	driver = new(Driver, num=1)
	setup(driver, (csv_arg, node_map, cluster_map, cluster_leaders))
	start(driver)

